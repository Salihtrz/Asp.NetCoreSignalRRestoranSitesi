@model List<ResultMenuTableDto>
@{
    Layout = null;
}
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<!DOCTYPE html>
<html>
<style>
    .widget-false {
        margin: 10px;
        width: 200px;
        height: 100px;
        background-color: #BC0827; /* Yeşil arka plan */
        display: flex;
        align-items: center;
        border-radius: 10px;
        color: white;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        pointer-events:auto;
        cursor:pointer;
    }

    .widget-true {
        margin: 10px;
        width: 200px;
        height: 100px;
        background-color: #2ecc71; /* Yeşil arka plan */
        display: flex;
        align-items: center;
        border-radius: 10px;
        color: white;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        pointer-events: auto;
        cursor: pointer;
    }

    .widget-icon {
        width: 40px;
        height: 40px;
        background-color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 10px;
    }

        .widget-icon i {
            font-size: 24px;
            color: #2ecc71;
        }

    .widget-text {
        margin-left: 20px;
    }

        .widget-text h3 {
            margin: 0;
            font-size: 18px;
        }

        .widget-text p {
            margin: 0;
            font-size: 14px;
        }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")


<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")
    <br />
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Default/Index/">Ana Sayfa</a>
                    <a class="breadcrumb-item text-white" href="/CustomerTable/CustomerTableList/">Masa Listesi</a>
                    <span class="breadcrumb-item active">Masa Seçimi Yapınız</span>
                </nav>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <script type="text/javascript">

            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7025/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("GetMenuTableStatus");
                    }, 1000);

                }).catch((err) => { console.log(err) });

                connection.on("ReceiveMenuTableStatus", (value) => {
                    var color = "";
                    var status = "";
                    var href = "";
                    var icon = "";
                    console.log(value);
                    let tablehtml = `<div class="row px-xl-5">`;
                    $.each(value, (index,item) => {
                        if(item.status == true){
                            color = "widget-true";
                            status = "Masa Boş";
                            href = "/Menu/Index/" + item.menuTableID;
                            icon = "fas fa-chair";
                        }else{
                            color = "widget-false";
                            status = "Masa Dolu";
                            href = "/Basket/Index/" + item.menuTableID;
                            icon = "fa-solid fa-cash-register";
                        }
                        tablehtml += `<a href=${href} class="${color}">
                                        <div class="widget-icon">
                                            <i class="${icon}"></i>
                                        </div>
                                        <div class="widget-text">
                                            <h3>${item.name}</h3>
                                            <p>${status}</p>
                                        </div>
                                      </a>`
                    });
                    tablehtml += "</div>"
                    $("#tablestatuslist").html(tablehtml);
                });
            });

        </script>
        <div id="tablestatuslist">
            
        </div>

    </div>


    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")
</body>

</html>