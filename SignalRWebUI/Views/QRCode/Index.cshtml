
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Code Oluşturma Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="text" name="value" />
                    <input type="submit" value="QR Code Oluştur" class="btn btn-warning" />
                </form>
                @if (@ViewBag.QRCodeImage != null)
                {
                    <img src="@ViewBag.QRCodeImage" style="width:400px; height:400px;" alt="" />
                }
            </div>
        </div>
    </div>
</div>